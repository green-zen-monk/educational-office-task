{
    "name": "green-zen-monk/admission-score-calculator",
    "description": "PHP library for calculating Hungarian higher-education admission scores with extensible rules and validation.",
    "keywords": ["admission", "score", "calculator", "hungary", "education", "higher-education", "php"],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "GreenZenMonk\\AdmissionScoreCalculator\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Budai Kriszti√°n",
            "email": "72669043+green-zen-monk@users.noreply.github.com"
        }
    ],
    "scripts": {
        "test": "phpunit -c phpunit.xml",
        "test:debug": "phpunit -c phpunit.xml --debug",
        "test:coverage": "phpunit -c phpunit.coverage.xml",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon",
        "cs-fix": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "cs-check": "vendor/bin/php-cs-fixer fix --dry-run --diff --config=.php-cs-fixer.dist.php"
    },
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.12",
        "friendsofphp/php-cs-fixer": "^3.80"
    }
}
